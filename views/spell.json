{
  "debug": false,
  "spacing": 0,
  "padding": [
    20
  ],
  "views": [
    {
      "type": "hStack",
      "views": [
        {
          "type": "text",
          "style": "entityTitle",
          "value": "**{{name|uppercase}}**"
        },
        {
          "style": "entitySubtitle",
          "value": "**{{data.tradition|map: 'Tradition'|uppercase}} â€¢ {{data.spellType|map: 'SpellType'|uppercase}} {{data.rank|uppercase}}**",
          "alignment": "trailing"
        }
      ]
    },
    {
      "type": "divider",
      "bgColor": "#000000",
      "height": 2.5,
      "padding": [
        0
      ]
    },
    {
      "type": "spacer"
    },
    {
      "type": "vStack",
      "padding": [
        8
      ],
      "views": [
        {
          "type": "list",
          "attribute": "data.spellOption",
          "views": [
            {
              "type": "text",
              "style": "sotdlbody",
              "value": "{% if name %}**{{name}}**{% endif %} {{text}}"
            }
          ]
        },
        {
          "type": "text",
          "style": "sotdlbody",
          "value": "{% if data.spellDuration or data.specificDuration %}**{{'Common.Duration'|l}}.**{% endif %} {% include 'spell-duration.md' data %}",
          "visibleIf": "{% if data.spellDuration or data.specificDuration == true %}true{% endif %}"
        }
      ]
    },
    {
      "type": "divider",
      "bgColor": "#9B0619",
      "height": 1.5,
      "visibleIf": "{% if data.spellOption or data.spellDuration == true %}true{% endif %}",
      "padding": [
        0
      ]
    },
    {
      "type": "spacer"
    },
    {
      "type": "vStack",
      "padding": [
        8
      ],
      "views": [
        {
          "type": "text",
          "style": "sotdlbody",
          "value": "{{descr}}"
        },
        {
          "type": "list",
          "attribute": "data.spellEffect",
          "views": [
            {
              "type": "text",
              "style": "sotdlbody",
              "value": "{% if name %}**{{name}}**{% endif %} {{text}}"
            }
          ]
        }
      ]
    },
    {
      "type": "spacer"
    }
  ]
}